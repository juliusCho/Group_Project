@CHARSET "UTF-8";

/* 전체 영역 폰트, 폰트싸이지, 배경색 */
body {
	font: 12px/1.2 맑은 고딕, Malgun Gothic, Dotum, Verdana, AppleGothic, Sans-serif;
	color: #666;
	background: #ffffff;
	margin: 0;
	padding: 0;
}

td {
	width: 60px;
	font-size: 14;
}

a {
	color: #e47c7c;
}

/*	전체 감싸는 영역	*/
#main {
	margin: 0 auto;
	width: 1000px;
}

/* 메인 전체 영역 */
#main_body {
	width: 1000px;
	height: 514px;
	background-image: url('../img/main/main01.jpg');
}

/* 메인 이미지 좌측 */
#body_01 {
	float: left;
	width: 650px;
	height: 514px;
}

/* 메인 이미지 안의 텍스트 */
#body_text {
	margin-top: 400px;
	margin-left: 50px;
	color: #ee9b9b;
	width: 450px;
	height: 100px;
	font-size: 25px;
	font-weight: bold;
	text-shadow: 1px 1px 1px rgb(0, 0, 0);
}

/* 메인 로그인 우측 */
#body_02 {
	float: left;
	width: 345px;
	height: 514px;
}

/* 로그인 입력 영역 */
#login {
	margin-top: 120px;
	margin-left: 47px;
	width: 220px;
}

#login_img {
	height: 50px;
}

#text_id {
	font-weight: bold;
}

#set_id {
	width: 130px;
}

#set_pw {
	width: 130px;
}

/* 로그인 버튼 */
#btn_login {
	float: left;
	width: 55px;
	height: 50px;
}

/* 로그인시 보이는 화면 */
#nick_text {
	font-size: 15px;
	font-weight: bold;
	color: #3383bb;
}

#nick_text:HOVER {
	color: #99dd7e
}

#logout_table {
	width: 200px;
}

/* 로그인시 보이는 이미지  */
#logout_table tr td img {
	width: 90px;
	height: 90px;
	border: 5px solid #dee3e8;
	border-radius: 50px;
}

#my_logout {
	font-size: 12px;
	color: #606060;
	border: 1px solid #efefef;
	border-collapse: collapse;
	text-decoration: none;
}

#my_logout:HOVER {
	color: #99dd7e;
}

/* 회원가입 및 타 로그인 영역 */
#membership {
	height: 40px;
}

/* 메인 풋터 영역 */
#main_footer {
	width: 1000px;
	clear: left;
}

#main_footer table tr td {
	width: 80px;
	height: 30px;
}

#main_footer table tr td a {
	color: #474747;
	font-size: 12px;
	font-weight: bold;
	text-decoration: none;
}

#corporate {
	font-family: Malgun Gothic;
	color: color:#3383bb;
	font-weight: bold;
	font-size: 14px;
	height: 35px;
}