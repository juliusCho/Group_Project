@CHARSET "UTF-8";

#chat_list_body {
	height: 600px;
	background-color: #fff;
}

#chat_content {
	display: inline-block;
	position: relative;
	background: #fff;
	height: 50px;
	width: 120px;
	margin: 0 auto 10px;
}

#chat_content:after {
	content: '';
	position: absolute;
	border-top: 10px solid #ccc;
	border-right: 5px solid transparent;
	border-left: 5px solid transparent;
	bottom: -9px;
	left: 5px;
}
#chatList_text {
	border-bottom:3px solid #ff0084;
	height:30px;
	width: 520px;
	font-size:18px;
	font-weight:bold;
	padding-top: 30px;
}

#chat_list_table {
	margin:20px 0px 0px 0px;
	border-collapse:collapse;
}

#chat_list_table tr td {
	border-bottom: 1px dotted #ffd1e9;
	border-collapse:collapse;
}

#chat_list_table tr td img {
	width: 60px;
	height: 60px;
	border: 5px solid #fff;
	border-radius: 50px;
}

#chat_list_icon {
	width: 30px;
}

#chat_list_pic {
	width: 80px;
}

#chat_list_nick {
	width: 250px;
}

#chat_list_start {
	width: 80px;
}
#chat_nick {
	float:left;
}
#chat_newmsg {
	float: left;
	color: #fff;
	font-size: 12px;
	font-weight: bold;
	width: 18px;
	height: 18px;
	border: 1px solid #fff;
	border-collapse:collapse;
	border-radius: 50px;
	background-color: #ff0084;
}

#chat_regdate {
	clear:left; 
	font-size:8px;
}

#chat_start {
	font-size:12px;
	color:#ff0084;
	margin:3px;
	border-radius: 20px;
}

#chat_start:HOVER {
	color:#fff; 
}

#chat_del {
	font-size:12px;
	color:#838383;
	margin:3px;
	border-radius: 20px;
}

#chat_del:HOVER {
	color:#fff; 
}

